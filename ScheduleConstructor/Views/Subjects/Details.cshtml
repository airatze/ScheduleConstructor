@model ScheduleConstructor.Models.Subject

@{
    ViewData["Title"] = "Подробнее";
}

    <h1>Подробнее</h1>

<div>
    <h4>Пара</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Номер дня
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberInDay)
        </dd>
        <dt class = "col-sm-2">
            Номер недели
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberInWeek)
        </dd>
        <dt class = "col-sm-2">
            Предмет
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lesson.Name)
        </dd>
        <dt class = "col-sm-2">
            Группа
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Group.Name)
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated)
    {<a asp-action="Edit" asp-route-id="@Model.SubjectID">Изменить</a>}
    <a asp-action="Index">Назад</a>
</div>
